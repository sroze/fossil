{
  "name": "website",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\" \"npm run dev:read-models\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:read-models": "tsup app/entry.read-models.ts --format cjs --watch --onSuccess \"node dist/entry.read-models.js\"",
    "test": "jest",
    "postinstall": "npx remix setup node",
    "start": "npx remix-serve build",
    "migrate": "if [ -f .env ]; then source .env; fi && pg-migrations apply --directory migrations -c $WEBSITE_DATABASE_URL"
  },
  "dependencies": {
    "@databases/pg-migrations": "^5.0.2",
    "@headlessui/react": "^1.7.9",
    "@heroicons/react": "^2.0.14",
    "@opentelemetry/api": "^1.4.0",
    "@opentelemetry/core": "^1.9.1",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@remix-validated-form/with-zod": "^2.0.5",
    "auth0": "^3.3.0",
    "axios": "^1.3.4",
    "eskit-ish": "workspace:*",
    "event-serialization": "workspace:*",
    "event-store": "workspace:*",
    "fossil-api-client": "workspace:*",
    "luxon": "^3.2.1",
    "md5": "^2.3.0",
    "node-jose": "^2.1.1",
    "pg": "^8.9.0",
    "pg-format": "^1.0.4",
    "pg-native": "^3.0.1",
    "prometheus-query": "^3.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-select": "^5.7.0",
    "recharts": "^2.5.0",
    "remix-auth": "^3.4.0",
    "remix-auth-auth0": "^1.5.1",
    "remix-utils": "^6.0.0",
    "remix-validated-form": "^4.6.8",
    "sql-template-tag": "^4.1.0",
    "store-locator": "workspace:*",
    "store-security": "workspace:*",
    "subscription": "workspace:*",
    "uuid": "^9.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@types/auth0": "^3.3.1",
    "@types/jest": "^29.5.0",
    "@types/luxon": "^3.2.0",
    "@types/md5": "^2.3.2",
    "@types/pg": "^8.6.6",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@types/uuid": "^9.0.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "jest": "^29.3.1",
    "tailwindcss": "^3.2.4",
    "tsconfig": "workspace:*",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "rootDir": "app",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    },
    "testEnvironment": "node",
    "setupFiles": [
      "../test/setup"
    ]
  }
}
